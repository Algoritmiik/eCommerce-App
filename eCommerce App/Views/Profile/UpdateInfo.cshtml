@{ <!--EKLENECEKLER: Otomatik olarak giriş yapan kullanıcının id'sinin url'ine redirect edecek-->
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var firstName = "";
    var lastName = "";
    var email = "";
    var phoneNumber = "";
    var userId = "";

    if (!IsPost)
    {
        if (!Request.QueryString["userId"].IsEmpty() && Request.QueryString["userId"].IsInt()) //?userId=10
        {
            userId = Request.QueryString["userId"];
            var db = Database.Open("Context"); <!--Nuget package olarak Microsoft.AspNet.WebPages.WebData eklenmeli-->
            var dbCommand = "SELECT * FROM Users WHERE userId = @0";
            var row = db.QuerySingle(dbCommand, userId);

            if (row != null)
            {
                firstName = row.firstName;
                lastName = row.lastName;
                email = row.email;
                phoneNumber = row.phoneNumber;
            }
        }
    }

    if (IsPost)
    {
        if (!Request.QueryString["userId"].IsEmpty() && Request.QueryString["userId"].IsInt())
        {
            firstName = Request.Form["firstName"];
            lastName = Request.Form["lastName"];
            email = Request.Form["email"];
            phoneNumber = Request.Form["phoneNumber"];
            userId = Request.Form["userId"];


            var db = Database.Open("Context");
            var updateCommand = "UPDATE Users SET firstName = @0, lastName = @1, email = @2, phoneNumber = @3 WHERE userId = @4";
            db.Execute(updateCommand, firstName, lastName, email, phoneNumber, userId);
            Response.Redirect("/Profile/Profile");
        }
    }
}

