@{ <!--EKLENECEKLER: Otomatik olarak giriş yapan kullanıcının id'sinin url'ine redirect edecek-->
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string creditCardName = "";
    string holderName = "";
    string cardNumber = "";
    int creditCardId = 0;
    int userId_userId = 0;
    int userId = 0;
    string CVV = "";
    string userName = "";
    DateTime expireDate = new DateTime();
    userName = User.Identity.Name;


    if (!IsPost)
    {
        var db = Database.Open("Context"); <!--Nuget package olarak Microsoft.AspNet.WebPages.WebData eklenmeli-->
        var dbCommand1 = "SELECT * FROM Users WHERE userName = @0";
        var row1 = db.QuerySingle(dbCommand1, userName);

        if (row1 != null)
        {
            userId = row1.userId;
        }

        var dbCommand2 = "SELECT * FROM CreditCards WHERE userId_userId = @0";
        var row2 = db.QuerySingle(dbCommand2, userId);

        if (row2 != null)
        {
            creditCardName = row2.creditCardName;
            holderName = row2.holderName;
            cardNumber = row2.cardNumber;
            creditCardId = row2.creditCardId;
            userId_userId = row2.userId_userId;
            expireDate = row2.expireDate;
            CVV = row2.CVV;
        }
        //else
        //{
        //    creditCardName = Request.Form["creditCardName"];
        //    holderName = Request.Form["holderName"];
        //    cardNumber = Request.Form["cardNumber"];
        //    CVV = Request.Form["CVV"];
        //    creditCardId = 0;
        //    expireDate = DateTime.Parse("01/02/2025");
        //    userId_userId = userId;
        //}
    }
    }
