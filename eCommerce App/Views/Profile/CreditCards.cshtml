        <div class="col-md-8 top_brand_left">
            <div class="hover14 column">
                <div class="agile_top_brand_left_grid">
                    <div class="agile_top_brand_left_grid1">
                        <h1>Credit card</h1>
                        <h2>@creditCardName</h2>
                        <div class="flip-container">
                            <div class="flipper">
                                <div class="front">
                                    <div class="card">
                                        <div class="card__sim"></div>
                                        <div class="card__number">
                                            @cardNumber
                                        </div>
                                        <div class="card__little-number">
                                            number
                                        </div>
                                        <div class="card__little-letter">
                                            Good Till
                                        </div>
                                        <div class="card__expiration">
                                            <div class="card__month">
                                                @expireDate.Month
                                            </div>
                                            <span>/</span>
                                            <div class="card__year">
                                                @expireDate.Year
                                            </div>
                                        </div>
                                        <div class="card__name">
                                            @holderName
                                        </div>
                                        <div class="card__type">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <form method="post">
                            <fieldset>
                                <div class="row mt-2">
                                    <div class="col-md-6"><label class="labels">Credit Card Name</label><input name="creditCardName" type="text" class="form-control" placeholder="Credit Card Name" value="@creditCardName"></div>
                                    <div class="col-md-6"><label class="labels">Card Holder Name</label><input name="holderName" type="text" class="form-control" placeholder="Card Holder Name" value="@holderName"></div>
                                </div>
                                <br>
                                <div class="row mt-3">
                                    <div class="col-md-12"><label class="labels">Card Number</label><input name="cardNumber" type="tel" class="form-control" placeholder="Card Number" value="@cardNumber"></div>
                                </div>
                                <br>
                                <div class="row mt-3">
                                    <div class="col-md-12"><label class="labels">Expire Month</label><input name="expireDate" type="datetime" class="form-control" value="@expireDate"></div>
                                </div>
                                <br>
                                <div class="row mt-3">
                                    <div class="col-md-12"><label class="labels">CVV</label><input name="CVV" type="text" class="form-control" placeholder="CVV" value="@CVV"></div>
                                </div>
                                <div class="row mt-3">
                                    <input type="hidden" name="creditCardId" value="@creditCardId">
                                    <input type="hidden" name="userId" value="@userId_userId">
                                </div>
                                <br>
                                <p><input type="submit" name="buttonSubmit" value="Submit Changes" /></p>
                            </fieldset>
                            <br>
                        </form>
                    </div>
                </div>
            </div>
        </div>


